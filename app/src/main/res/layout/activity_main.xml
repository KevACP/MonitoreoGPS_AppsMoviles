<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/imageViewUtnLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/utn_logo"
        android:contentDescription="Logo Universidad Técnica del Norte"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewUtnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidad Técnica del Norte"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/imageViewUtnLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewStudentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kevin Calderón\nAplicaciones Móviles"
        android:textSize="16sp"
        android:textColor="@color/colorText"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewUtnTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciando..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/textViewStudentInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonViewGpsData"
        style="@style/AppButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Datos GPS"
        app:layout_constraintTop_toBottomOf="@id/statusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/buttonTestSensorApi"
        style="@style/AppButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Probar API Sensor Data"
        app:layout_constraintTop_toBottomOf="@id/buttonViewGpsData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/buttonTestStatusApi"
        style="@style/AppButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Probar API Device Status"
        app:layout_constraintTop_toBottomOf="@id/buttonTestSensorApi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>